doctype html
html
  head
    title Listado de Docentes
    link(rel='stylesheet', href='/styles/styles.css')


  body
    h1 Listado de Docentes
 
    each docente in docentes
      div
        p #{docente.nombre} (#{docente.dni})
        if docente.cursos
          ul
            each curso in docente.cursos
              li #{curso}
        else 
          ul
            li No tiene cursos asignados